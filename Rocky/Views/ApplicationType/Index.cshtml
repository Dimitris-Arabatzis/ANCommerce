@model IEnumerable<ApplicationType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Application Types</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="text-center">
                    <th>
                        Id
                    </th>
                    <th>
                        Application Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var row in Model)
                {
                    <tr>
                        <td width="20%" class="text-center">
                            @row.Id
                        </td>
                        <td width="50%">
                            @row.Name
                        </td>
                        <td>
                            <a asp-controller="ApplicationType" asp-route-Id="@row.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="ApplicationType" asp-route-Id="@row.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-info">No Application Types exist.</p>
    }
</div>

